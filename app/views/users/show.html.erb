<section class="vh-100" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">


              <% if current_user.image.attached? %>
  <%= image_tag(current_user.image, style: "height:150px; width:150px;",class: "rounded-circle img-thumbnail  img-fluid") %>
<% else %>
   <%= image_tag "user.png", size: "150x150" %><br>
  <%= link_to edit_user_registration_path do %>
    <i class="material-icons right">Update Profile</i>
  <% end %>
<% end %>




            <h4 class="mb-2"><%= @user.username %></h4>
           
            <p class="text-muted mb-4"><%= @user.email %><span class="mx-2"></span>

            <div class="mb-4 pb-2">
            
            <button type="button" class="btn-rounded btn-lg">
              <%= @user.bio %>
            </button>

            <p class="text-muted mb-4"><b>Customer id:  </b><%= current_user.stripe_customer_id %><span class="mx-2"></span>
            <p class="text-muted mb-4"><b>Subscription Plan:  </b><%= current_user.plan %><span class="mx-2"></span>
            <p class="text-muted mb-4"><b>Status:  </b><%= current_user.subscription_status %><span class="mx-2"></span>
            <p class="text-muted mb-4"><b>Ends On:  </b><%= current_user.subscription_ends_at %><span class="mx-2"></span>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>